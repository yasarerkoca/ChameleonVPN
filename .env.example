# =========================
# GLOBAL
# =========================
ENV=dev
DOMAIN=chameleon.local
APP_URL=http://localhost:8000

# =========================
# BACKEND
# =========================
API_PORT=8000
# Geliştirme için true; prod'da false bırakın
DEBUG=true

# Veritabanı (uygulama DATABASE_URL kullanır; DB_URL alias desteklenir)
DATABASE_URL=postgresql+psycopg2://vpnadmin:iryna@db:5432/chameleonvpn

# Redis (rate-limit/cache)
REDIS_URL=redis://redis:6379/0

# ZORUNLU güvenlik anahtarları (>= 32 karakter)
SECRET_KEY=change-me
SESSION_SECRET_KEY=change-me-too
# JWT
JWT_ALGO=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS: '*' veya CSV ("https://a.com,https://b.com") veya JSON liste ('["https://a.com","https://b.com"]')
ALLOWED_ORIGINS=*

# =========================
# OAUTH (Google)
# =========================
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=${APP_URL}/auth/google/callback

# (Legacy alias — opsiyonel)
OAUTH_GOOGLE_CLIENT_ID=
OAUTH_GOOGLE_CLIENT_SECRET=
OAUTH_GOOGLE_REDIRECT_URI=${APP_URL}/auth/google/callback

# =========================
# SMTP (opsiyonel)
# =========================
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM=

# =========================
# STRIPE (opsiyonel)
# =========================
STRIPE_API_KEY=
STRIPE_WEBHOOK_SECRET=
STRIPE_PUBLISHABLE_KEY=

# =========================
# POSTGRES (docker-compose servis env’leri)
# =========================
POSTGRES_USER=vpnadmin
POSTGRES_PASSWORD=change-me
POSTGRES_DB=chameleonvpn

# =========================
# LOGGING / TELEMETRY (opsiyonel)
# =========================
LOG_LEVEL=INFO
SENTRY_DSN=

# =========================
# CI/CD SECRETS (GitHub Actions)
# =========================
PROD_HOST=
PROD_USER=
PROD_SSH_KEY=
ANDROID_KEYSTORE_BASE64=
ANDROID_KEYSTORE_PASSWORD=
ANDROID_KEY_PASSWORD=
ANDROID_KEY_ALIAS=
IOS_CERT_BASE64=
IOS_PROVISION_PROFILE_BASE64=
IOS_CERT_PASSWORD=

